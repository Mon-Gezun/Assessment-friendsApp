<h1>Friends</h1>
<table class="table table-striped table-hover">
  <thead class="thead-light" >
    <tr>
      <th>FirstName</th>
      <th>LastName</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th></th>
      <th>Action</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td><%= friend.first_name %></td>
        <td><%= friend.last_name %></td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.twitter %></td>
        <td><%= link_to 'Show',friend, class: "btn btn-secondary" %></td>
        <td><%= link_to 'Edit',edit_friend_path(friend), class: "btn btn-secondary" %></td>
        <td><%= link_to 'Destroy',friend_path(friend), method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-danger" %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'Add Friend', new_friend_path, class: "btn btn-secondary" %>
